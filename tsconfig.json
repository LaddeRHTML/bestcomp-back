{
    "compilerOptions": {
        "module": "commonjs",
        "baseUrl": "./",
        "paths": {
            "app/*": ["./src/main/app/*"],
            "auth/*": ["./src/main/auth/*"],
            "common/*": ["./src/main/common/*"],
            "config/*": ["./src/main/config/*"],
            "controller/*": ["./src/main/controller/*"],
            "dto/*": ["./src/main/dto/*"],
            "model/*": ["./src/main/model/*"],
            "module/*": ["./src/main/module/*"],
            "service/*": ["./src/main/service/*"],
            "cache/*": ["./src/resources/cache/*"],
            "database/*": ["./src/resources/database/*"],
            "filter/*": ["./src/resources/filter/*"]
        },
        "outDir": "./dist",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false,
        "target": "es2017",
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
