#!/bin/bash

# Protect master from accidental commits.
echo -e "===\n>> Pre-commit Hook:: Checking branch name / –ü—Ä–æ–≤–µ—Ä—è–µ–º –≤–µ—Ç–∫—É..."
branchName=$(git branch | grep '*' | sed 's/* //')

if [ $branchName == 'release' ]
then
  echo -e "\nüö´ Commit directly to master branch is not allowed! / –ü—É—à–∏ –Ω–∞–ø—Ä—è–º—É—é –≤ —Ä–µ–ª–∏–∑ - –∑–∞–ø—Ä–µ—â–µ–Ω—ã!\n" && exit 1
fi

echo -e ">> Finish checking branch name / –ó–∞–∫–∞–Ω—á–∏–≤–∞—é –ø—Ä–æ–≤–µ—Ä—è—Ç—å –≤–µ—Ç–∫—É.\n==="

exit 0
